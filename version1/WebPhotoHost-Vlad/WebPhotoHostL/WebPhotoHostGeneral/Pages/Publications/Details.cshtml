@page "{id}"
@model WebPhotoHostGeneral.Pages.Publications.DetailsModel
@{ ViewData["Title"] = "Publication Details";
				var photoPath = $"/images/{Model.Publication.PhotoPath ?? "noimage.png"}"; }

<div class="row text-center">
	<div class="col">
		<img class="w-50 img-fluid img-thumbnail" style="background-color: #dle7ff;" src="@photoPath" asp-append-version="true" />
	</div>
</div>



<div class="row justify-content-center m-3">

	<div class="card cardBoxShadow">
		<div class="card-body text-center">
			<div class="row">
				<div class="col col-lg-9">
					<h4 class="cardTextLeftFloating">Publication ID: @Model.Publication.Id</h4><hr />
					<h4 class="cardTextLeftFloating">Publication Email: @Model.Publication.Email</h4><hr />
					<h4 class="cardTextLeftFloating">Publication Name: @Model.Publication.Name</h4><hr />
					<h4 class="cardTextLeftFloating">Publication Department: <span class="text-danger font-weight-bold">@Model.Publication.Department</span></h4>

					<div class="card-footer text-center" style="background-color: rgb(255, 255, 255);">
						@if (User.Identity.IsAuthenticated)
						{
							<a class="btn btn-success" href="@photoPath" download="Image">Download image</a> <!--ЗАГРУЗКА ФАЙЛА--> 
						}
						else
						{
							<a class="btn btn-success" asp-page="/Login"> <span class="text-danger font-weight-bold">You must be logged in to download</span></a>
						}

						<a class="btn btn-success" asp-page="Publications" style="color:#ffffff">Back</a>
						<!--<a href="#" class="btn-primary buttonShadow">Edit</a>
						<a href="#" class="btn-danger buttonShadow">Delete</a>-->
					</div>
				</div>
			</div>
		</div>
	</div>

</div>