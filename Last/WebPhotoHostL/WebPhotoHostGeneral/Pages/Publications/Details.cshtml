@page "{id}"
@model WebPhotoHostGeneral.Pages.Publications.DetailsModel
@{
    ViewData["Title"] = "Publication Details";
    var photoPath = $"/images/{Model.Publication.PhotoPath ?? "noimage.png"}";
}

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        @*@await Component.InvokeAsync("HeadCount", new { department = Model.Publication.Department })*@
        <vc:head-count department="@Model.Publication.Department"></vc:head-count>
    </div>
</div>

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <div class="card cardBoxShadow">

            <div class="card-header cardHeaderStyle text-center">
                <h1>@Model.Publication.Name</h1>
            </div>

            <div class="card-body cardBoxShadow text-center">
                <div class="row">
                    <div class="col col-lg-9">
                        <h4 class="cardTextLeftFloating">Publication ID: @Model.Publication.Id</h4><hr /> 
                        <h4 class="cardTextLeftFloating">Publication Email: @Model.Publication.Email</h4><hr />
                        <h4 class="cardTextLeftFloating">Publication Department: <span class="text-danger font-weight-bold">@Model.Publication.Department</span></h4><hr />
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="cardTextLeftFloating" href="@photoPath" download="Image">Загрузить файл</a> <!--ЗАГРУЗКА ФАЙЛА-->
                        }
                        else
                        {
                    <a class="cardTextLeftFloating" asp-page="/Login">Для скачивания необходимо <span class="text-danger font-weight-bold">Войти</span></a>
                        }
                    </div>

                    <div class="col col-lg-3">
                        <div style="border-right: 1px solid rgba(0,0,0,.1);">
                            <img class="card-img-top imageThumbnail border-primary" style="background-color: #dle7ff;" src="@photoPath" asp-append-version="true" />
                        </div>
                    </div>
                    
                </div>

                <div class="row">
                    <div class="col">
                        <div class="card-footer text-center" style="background-color: rgba(0,0,0,0.25);">
                            <a asp-page="Publications" class="btn-success buttonShadow">Back</a>
                            <!--<a href="#" class="btn-primary buttonShadow">Edit</a>
                            <a href="#" class="btn-danger buttonShadow">Delete</a>-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>