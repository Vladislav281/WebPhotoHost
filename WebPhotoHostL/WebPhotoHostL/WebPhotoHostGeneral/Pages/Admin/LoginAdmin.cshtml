@page
@model WebPhotoHostGeneral.Pages.Admin.LoginAdminModel
@{
    ViewData["Title"] = "Admin";
}

<style>
    label {
        font-family: 'Myriad Pro Bold'; /* Гарнитура текста */
        font-size: 110%; /* Размер шрифта в процентах */
    }
    h3{
        font-family: 'Myriad Pro Bold'; /* Гарнитура текста */
        font-size: 110%; /* Размер шрифта в процентах */
    }
</style>
<ul class="breadcrumb">
    <li><a asp-page="index">Home</a> <span class="divider">/</span></li>
    <li class="active">Login</li>
</ul>
<h3> Admin Area</h3>
<hr class="soft" />

<div class="row">
    <div class="span12">
        <div class="well">
            @Model.Msg
            <form method="post" asp-page="login">
                <div class="control-group">
                    <label class="control-label" for="username">Username</label>
                    <div class="controls">
                        <input class="span3" type="text" id="username" placeholder="Username" name="username">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputPassword1">Password</label>
                    <div class="controls">
                        <input type="password" class="span3" id="inputPassword1" placeholder="Password" name="password">
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn btn-success">Sign In</button>
                        <a class="btn btn-success" asp-page="register">Sign Up</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
