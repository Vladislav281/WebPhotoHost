@model Employee

@{
    var photoPath = $"/images/{Model.PhotoPath ?? "noimage.png"}";
    var showButtons = (bool)ViewData["ShowButtons"];
}

<div class="card-deck">
    <div class="card m-3 cardBoxShadow">
        <div class="card-header text-center cardHeaderStyle">
            <h3>@Model.Name</h3>
        </div>

        <div class="text-center cardBodyStyle">
            <img class="card-image-top imageThumbnail" src="@photoPath" asp-append-version="true" />
        </div>
        @if (showButtons)
        {
            <div calss="card-footer text-center">
                <a asp-page="/Employees/Details" asp-route-Id="@Model.Id" class="btn btn-success m-1 buttonShadows">View</a>
                <a asp-page="/Employees/Edit" asp-route-Id="@Model.Id" class="btn btn-primary m-1 buttonShadows">Edit</a>
                <a asp-page="/Employees/Delete" asp-route-Id="@Model.Id" class="btn btn-danger m-1 buttonShadows">Delete</a>
            </div>
        }
    </div>
</div>
